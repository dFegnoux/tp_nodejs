<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Mini chatroom</title>
        <link href="public/css/reset.css" type="text/css" rel="stylesheet">
        <link href="public/css/chatroom.css" type="text/css" rel="stylesheet">
    </head>
 
    <body>
        <h1>Mini chatroom!</h1>
        <div class="container">
            <div class="message-zone">
                <div class="chat-container"></div>
                <div class="is-typing"></div>
                <form action="/chatroom/send/" method="post">
                    <p>
                        <input type="text" name="newMessage" id="newMessage" class="message-input"/>
                        <input type="submit" value="Send" class="submit-btn"/>
                    </p>
                </form>
            </div>
            <div class="aside">
                <div class="user-profile">
                    <div>About me :</div>
                    <div>
                        <button id="change-nickname">Change my nickname</button>
                    </div>
                    <input id="allow-notifications-btn" type="checkbox" checked><label for="allow-notifications-btn">Notifications</label>
                </div>
                <div class="user-list"></div>
            </div>
        </div>

        <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script src="public/js/chatroom.js"></script>
    </body>
</html>